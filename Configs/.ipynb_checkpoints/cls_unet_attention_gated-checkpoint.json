{
  "training": {
    "task": "classification",
    "epochs": 10,
    "lr_policy": "step",
    "lr_decay_iters": 250,
    "preloadData": true
  },
  "data": {
    "root_dir": "datasets/classification",
    "train_batch_size": 24,
    "test_batch_size": 24,
    "seed": 42
  },
  "model": {
    "model_name": "AttentionUnet",
    "n_classes": 4,
    "feature_scale": 4,
    "is_deconv": true,
    "in_channels": 3,
    "is_batchnorm": true,
    "save_model_name": "attention_unet_best_classification.pth"
  },
  "transform": {
    "img_shape": [224, 224],
    "h_flip_prob": 0.6,
    "v_flip_prob": 0.6,
    "random_rotate": [-8, 8],
    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225]
  }
}