{
  "training": {
    "task": "segmentation",
    "transfer_learning": true,
    "epochs": 15,
    "lr_policy": "step",
    "lr_decay_iters": 250,
    "preloadData": true,
    "freeze": false,
    "gradually_unfreeze": false
  },
  "data": {
    "root_dir": "datasets/segmentation",
    "with_notumour": true,
    "train_batch_size": 8,
    "test_batch_size": 8,
    "seed": 42
  },
  "model": {
    "model_name": "ProposedUnet",
    "n_classes": 4,
    "feature_scale": 16,
    "in_channels": 3,
    "resnet_block_groups": 8,
    "save_model_name": "Proposed_attention_unet_convmixer_best_segmentation_transferlrn_unfreeze.pth",
    "pretrained_model": "Proposed_attention_unet_convmixer_best_classification.pth",
    "transfer_layers": ["init_conv", "downs"],
    "frozen_layers": ["init_conv", "downs.0", "downs.1"]
  },
  "transform": {
    "img_shape": [224, 224],
    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225]
  }
}